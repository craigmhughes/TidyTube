{
  "manifest_version": 2,
  "name": "TidyTube",
  "description": "Turns off the distracting YouTube related section. Prevents you from entering the \"Click, Watch, Click, Watch\" void.",
  "version": "1.0.1",
  "content_scripts": [
    {
      "matches": [
        "https://www.youtube.com/*"
      ],
      "js": ["content.js"],
      "css": ["hider.css"]
    }
  ],
  "web_accessible_resources": ["icons/logo-gray-02.png","icons/logo-green-02.png"],
  "browser_action": {
    "default_icon": "icons/logo-green-02.png"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
